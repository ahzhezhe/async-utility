{
  "name": "async-utility",
  "version": "1.1.3",
  "author": "Chang Zhe Jiet",
  "description": "Convert async function to sync function.",
  "keywords": [
    "async",
    "sync",
    "await",
    "promise",
    "deasync"
  ],
  "files": [
    "dist/**/*"
  ],
  "homepage": "https://github.com/ahzhezhe/async-utility#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ahzhezhe/async-utility"
  },
  "license": "ISC",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "eslint src/**/*.ts test/**/*.ts",
    "lint-mac": "eslint 'src/**/*.ts' 'test/**/*.ts'",
    "test": "jest",
    "build": "tsc",
    "prepublishOnly": "del-cli --force dist && tsc",
    "postpublish": "del-cli --force dist"
  },
  "dependencies": {
    "deasync": "^0.1.20"
  },
  "devDependencies": {
    "@types/deasync": "^0.1.1",
    "@types/jest": "^26.0.10",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "del-cli": "^3.0.1",
    "eslint": "^7.7.0",
    "eslint-plugin-import": "^2.22.0",
    "jest": "^26.4.1",
    "ts-jest": "^26.2.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.2"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "test\\.ts$",
    "collectCoverage": true,
    "coverageDirectory": "./test/__coverage__",
    "coveragePathIgnorePatterns": [
      "node_modules",
      "test"
    ]
  }
}
